<div class="container-fluid">

            <div class="row-fluid">
                <div class="span2">
                    
                    <ul class="nav nav-list">
                        <li class="nav-header">Categories</li>
                        
                        #{list cats, as:'cat'}
                         <li
                         %{ if(cat.id==1) { }%
                          class="active"
                         %{ } }%
                         ><a class="catNav" href="${cat.id}">${cat.name}</a></li>
                        #{/list}
                        
                    </ul>
                    %{ for (int i=0;i<cats.size();i++) { 
                    	Category cat=cats.get(i);
                     }%
						<span><a>waleed</a></span>
                    %{ } }%
					<div>
                      
                    
                    </div>
                    <!--Sidebar content-->
                </div>
                <div class="span10">
                    <ul class="breadcrumb">
                        <li><a href="#">Home</a> <span class="divider">/</span></li>
                        <li class="active">Ads</li>
                    </ul>
                    
                    <div class="btn-group">
                        <button class="btn">List My Ads</button>
                    </div>
                    
                    <div class="btn-group">
                        <button class="btn">Create New Ad</button>
                    </div>
                    
                    <div class="span10 searchForm">
                        
                            <fieldset>
                                
                                <input name="search" class="span7" type="text" id="search"  placeholder="Search Ads" >
                                    <select id="category" class="span3">
                                        <option value="0">All</option>
                                       
                                        #{list cats, as:'cat'}
                                        <option value="${cat.id}">${cat.name}</option>
                                        #{/list}
                                    </select>
                                    
                                    <button type="submit" class="btn btn-primary"> <i class="icon-search icon-white"></i></button>
                           </fieldset>
                      
                    </div>
                    
                    <div  id="result">
                    
                        
				

                        
           </div>
                    
                                                            
                    
                    <!--Body content-->
                </div>
            </div>
